<div class='center'>
  <h1>注册新用户</h1>
  <% @user.password = @user.password_confirmation = nil %> 

    <% semantic_form_for :user,@user, :url => users_path do |f| -%>    
      <%= f.input :login,:input_html => {:size => 30} %> 
      <%= f.input :email,:input_html => {:size => 30} %>
      <%= f.input :mobile,:input_html => {:size => 30} %> 
      <%= f.input :password,:input_html => {:size => 30} %> 
      <%= f.input :password_confirmation,:input_html => {:size => 30} %> 

  <p><%= submit_tag 'Sign up' %></p>
  <% end -%>
</div>

